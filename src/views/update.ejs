<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Page</title>
</head>
<body>
    <style>
        * {
            margin: 0;
            padding: 0;
        }
        
        /* Add a black background color to the top navigation */
        body {
          background-color: rgb(251, 251, 251);
        }
        
        .topnav {
            background-color: #333;
            overflow: hidden;
          }
          
          /* Style the links inside the navigation bar */
          .topnav a {
            float: left;
            color: #f2f2f2;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
          }
          
          /* Change the color of links on hover */
          .topnav a:hover {
            background-color: #ddd;
            color: black;
          }
          
          /* Add a color to the active/current link */
          .topnav a.active {
            background-color: #04AA6D;
            color: white;
          }
        
          .form-add-new {
            width: 500px;
            margin: 0 auto;
            padding-top: 100px;
          }
        
          .input-group {
            padding: 10px;
          }
        
          .button {
            padding: 10px;
            cursor: pointer;
          }
        
          .d-none {
            display: none;
          }
        .table-container {
            padding: 15px 20px;
        }
    
        .title {
            font-size: 25px;
            font-weight: 600;
            padding-bottom: 10px;
        }
    </style>
    <div class="topnav">
        <a href="/">Home</a>
        <a href="/update">Create Users</a>
    </div>
    <div class="form-add-new">
        <form action="/update-user" method="POST">
            <fieldset>
                <legend>Update this employee</legend>
                <div class="input-group d-none">
                    <label>Id:</label>
                    <input type="text" name="id" value = "<%= userId.id %>"/>
                </div>
                <div class="input-group">
                    <label>Name:</label>
                    <input type="text" name="email" value = "<%= userId.name %>"/>
                </div>
                <div class="input-group">
                    <label>Position:</label>
                    <input type="text" name="position" value = "<%= userId.position %>"/>
                </div>
                <div class="input-group">
                    <label>Day in:</label>
                    <input type="text" name="dayin" value = "<%= userId.dayin %>"/>
                </div>
                <div class="input-group">
                    <label>Day out:</label>
                    <input type="text" name="dayout" value = "<%= userId.dayout %>"/>
                </div>
                <div>
                    <button>Save</button>
                </div>
            </fieldset>
        </form>
    </div>
</body>
</html>